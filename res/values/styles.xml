<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <color name="myActionBarColor">#007fff</color>
    
    <!-- ActionBar Style -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/myActionBarColor</item>   
        <item name="android:titleTextStyle">@style/My.TabText.Style</item>
    </style>   
    
     <!-- ActionBar Text Style -->
    <style name="My.TabText.Style" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">       
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>  
       
</resources>
